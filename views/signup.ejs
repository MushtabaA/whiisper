<%- include("header"); %>

<div class="spacing container d-flex w-300 h-300 p-5 mx-auto justify-content-center">
    <form action="/signup" method="POST" class="form-signin">
        <h1 class="display-3">Sign Up Below</h1>
        <input name="name" type="name" class="form-control" placeholder="Name">
        <input name="email" type="email" class="form-control" placeholder="Email">
        <input name="password" type="password" class="form-control" placeholder="Password">
        <p class="mt-3 lead d-flex justify-content-center">
            <a style="color: white;" href="/" class="mx-1 btn btn-lg btn btn-info fw-bold">Back</a>
            <button class="btn btn-lg btn btn-primary fw-bold" type="submit">Sign Up</button>
        </p>
    </form>
</div>

<%- include("footer"); %>